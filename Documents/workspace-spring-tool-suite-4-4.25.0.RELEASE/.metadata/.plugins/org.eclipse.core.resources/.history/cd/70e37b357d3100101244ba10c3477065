  <!--<script>
    let items = [];

    function saveItem(event) {
      event.preventDefault();
      const code = document.getElementById("code").value.trim();
      const name = document.getElementById("name").value.trim();
      const type = document.getElementById("type").value;
      const fee = parseFloat(document.getElementById("fee").value);
      const remarks = document.getElementById("remarks").value.trim();

      const item = { code, name, type, fee, remarks };
      const index = items.findIndex(i => i.code === code);

      if (index >= 0) {
        items[index] = item;
      } else {
        items.push(item);
      }

      renderTable();
      document.getElementById("billingItemForm").reset();
    }

    function renderTable() {
      const tbody = document.getElementById("itemTableBody");
      tbody.innerHTML = "";
      items.forEach((item, index) => {
        const row = document.createElement("tr");
        row.innerHTML = `
          <td>${item.code}</td>
          <td>${item.name}</td>
          <td>${item.type}</td>
          <td>${item.fee.toFixed(2)}</td>
          <td>${item.remarks}</td>
          <td>
            <button class="btn btn-sm btn-warning me-1" onclick="editItem(${index})">Edit</button>
            <button class="btn btn-sm btn-danger" onclick="deleteItem(${index})">Delete</button>
          </td>
        `;
        tbody.appendChild(row);
      });
    }

    function editItem(index) {
      const item = items[index];
      document.getElementById("code").value = item.code;
      document.getElementById("name").value = item.name;
      document.getElementById("type").value = item.type;
      document.getElementById("fee").value = item.fee;
      document.getElementById("remarks").value = item.remarks;
    }

    function deleteItem(index) {
      if (confirm("Are you sure you want to delete this item?")) {
        items.splice(index, 1);
        renderTable();
      }
    }
  </script>-->
